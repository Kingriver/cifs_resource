/* pages/nearby/nearby.wxss */
.nearby{
  position: relative;
}

.search{
  display: flex;
  align-items: center;
  padding:  20rpx;
  background: #ffffff;
}
.search .input{
  flex: 1;
  height:58rpx;
  line-height: 58rpx;
  padding: 0 20rpx;
  border:2rpx solid #e6e6e6;
  background:#e6e6e6;
  border-radius:29rpx;
}
.search .btn{
  width: 100rpx;
  padding: 6rpx 0;
  margin-left: 12rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius:8rpx;
  border:2rpx solid #e6e6e6;
}


.mapBox{
  width: 100%; 
  height: 600rpx;
  z-index:1;
}


.current{
  padding: 24rpx;
  font-size: 30rpx;
  background: #ffffff;
  border-top: 2rpx solid #e6e6e6;
  border-bottom: 2rpx solid #e6e6e6;
}


.list{
  padding: 0 20rpx;
  background: #ffffff;
}
.list .item{
  padding: 12rpx 0;
  font-size: 28rpx;
  border-bottom: 2rpx solid #e6e6e6;
}
.list .item:last-child{
  border-bottom: none
}
.list .item .title{
  font-size: 30rpx;
}


.markItem{
  padding: 20rpx;
  font-size: 28rpx;
  background: #ffffff;
}
.markItem view{
  padding: 10rpx 0;
}
.markItem .title{
  font-size: 30rpx;
  border-bottom: 2rpx solid #e6e6e6;
}
.notFound{
  padding: 20rpx;
  font-size: 28rpx;
  text-align: center;
  /* color: #e6e6e6; */
  background: #ffffff;
}

.unAuthorized{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}
.unAuthorized .reset{
  width: 75%;
  height:80rpx;
  line-height:80rpx;
  border-radius:10rpx;
  font-size:28rpx;
  color:#ffffff;
  text-align: center;
  background:rgb(92, 201, 146);

}

.dataNum{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 28rpx;
}
.dataNum .num{
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 40rpx;
  color: rgb(92, 201, 146);
  border-radius:60rpx;
  text-align: center; 
  overflow: hidden;
  background: #ffffff;
}
.dataNum  .handle{
  flex: 1;
  display: flex;
  align-items: center;
  height: 80rpx;
  margin-left: 40rpx;
  border-radius:80rpx;
  background: #ffffff;
}
.dataNum  .handle .map{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  border-radius:80rpx; 
  color: #ffffff;
  background: #181717;
}
.dataNum  .handle .map image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin-right: 8rpx;
}
.dataNum  .handle .list{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  height: 80rpx;
  border-radius:80rpx; 
}
.dataNum  .handle .list image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin-right: 8rpx;
}