<!--pages/map/map.wxml-->
<view class='map'>

  <view class='search'>
      <input class='input'  value='{{selectedVal}}' bindconfirm="searchVal" bindinput='changeSearchVal'></input>
      <view bindtap='btnSearchVal' class='btn'>搜索</view>
  </view>
  <view class='list'>
      <view class='item' wx:if='{{valList.length}}' wx:for='{{valList}}' wx:for-item='item' wx:for-index='index' data-latitude='{{item.location.lat}}' data-longitude='{{item.location.lng}}' data-title='{{item.title}}' bindtap='selectVal'>
        <view class='title'>{{item.title}}</view>
        <view>{{item.address}}</view>
      </view>
  </view>


  <!-- <cover-view  >
  
  </cover-view> -->
  <map id="map" class='mapBox' longitude="{{longitude}}" latitude="{{latitude}}" markers="{{markers}}"  bindmarkertap="markertap" polyline="{{polyline}}"  scale="14" show-location subkey="SFLBZ-GZ5H6-7RLS6-EI7M2-EVVWK-LMBAU" ></map>
  <cover-view  class="class='handle'">当前位置: {{current_address}}</cover-view>



</view>
                                                                                   
