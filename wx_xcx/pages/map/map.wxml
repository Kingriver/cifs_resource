        <view class='title'>{{item.title}}</view>
        <view>{{item.address}}</view>
      </view>
    </view>
  </scroll-view> -->
</view>
<view wx:else class='unAuthorized'>
  <view class='reset' bindtap='reset'>重新授权</view>
</view>
                                                                                   


