/* pages/opinion/opinion.wxss */
.opinion{
 padding: 20rpx 0
}
.opinion .problem {
  padding:  10rpx 20rpx;
  margin-bottom: 20rpx;
  border-top: 2rpx solid #e6e6e6;
  border-bottom: 2rpx solid #e6e6e6;
  background: #ffffff;
}
.problem .title {
  padding: 8rpx 0;
}
.problem .title .must{
  color: red;
}
.problem .list{
  display: flex;
  flex-wrap: wrap;
   padding: 20rpx 0;
}
.problem .list .item{
  margin: 6rpx;
  padding: 8rpx 12rpx;
  text-align: center;
  border: 2rpx solid #e6e6e6;
  border-radius: 12%;
}
.problem .desc{
  width: 100%;
  height: 200rpx;
}
.problem .desc_count{
 text-align: right;
}
.opinion .voucher{
  padding:  10rpx 20rpx;
  margin-bottom: 20rpx;
  border-top: 2rpx solid #e6e6e6;
  border-bottom: 2rpx solid #e6e6e6;
  background: #ffffff;
}
.voucher .title{
 padding: 10rpx 0;
}
.voucher .imgs{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}
.voucher .imgs .img_item{
  width: 100rpx;
  height: 100rpx;
  margin:0 20rpx 20rpx 0;
  display: block;
}
.voucher .imgs .upload_btn{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 60rpx;
  color: #e6e6e6;
  border: 2rpx dashed #e6e6e6;
}