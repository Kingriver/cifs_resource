/* pages/nearby/nearby.wxss */
.search{
  display: flex;
  align-items: center;
  padding: 20rpx;
  font-size: 28rpx;
  background: #ffffff;
}
.search .input{
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  height: 58rpx;
  border: 2rpx solid #e6e6e6;
  background: #e6e6e6;
  border-radius:  29rpx;
}
.input .icon{
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  display: block;
}
.input input{
  width: 480rpx;
  height: 58rpx;
  line-height: 58rpx;
}
.search .btn{
  flex: 1;
  margin-left: 20rpx;
  font-size: 32rpx;
  text-align: center;
  color: #e6e6e6;
}
.search .current{
  flex: 1;
  display: flex;
  justify-content: center;
  text-align: center;
}
.search .current image{
  width: 54rpx;
  height: 54rpx;
  display: block;
}



.list{
  padding: 20rpx;
  background: #ffffff;
}
.list .item{
  display: flex;
  align-items: flex-start;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #e6e6e6;
}
.list .item .left{
  width: 200rpx;
  height: 200rpx;
}
.list .item .left image{
  width: 200rpx;
  height: 200rpx;
  display: block;
}
.list .item .right{
  flex: 1;
  padding:16rpx 0;
  margin-left:20rpx;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list .item .right .title{
  font-size: 32rpx;
  padding-bottom: 16rpx;

}
.list .item .right .type{
  padding-bottom: 10rpx;
}
.list .item .right .address{

}
.notFound{
  padding: 20rpx;
  font-size: 28rpx;
  text-align: center;
  /* color: #e6e6e6; */
  background: #ffffff;
}