/* pages/video_detail/video_detail.wxss */
page{
    background-color:  #191E2A;
    padding: 0;
}
.video_detail{
}
.video_detail .video-now {
    width: 100%;
    height: 420rpx;
}
.video_detail .video-title {
    width: 100%;
    height: 75rpx;
    line-height: 75rpx;
    font-size: 28rpx;
    color:#fff;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    border-bottom:1px solid #5D6169;
}
.video-other{
    margin-top: 30rpx;
    width: 100%;
    overflow:hidden;
    white-space:nowrap;
}
.video-other .other-name{
    margin-left: 30rpx;
    color: #fff
}
.video-other .other-content{
    width: 100%;
    height:430rpx;
    overflow: hidden;
    padding: 20rpx;
    white-space: nowrap;
    text-align: center
}
.video-other .other-content .other-link{
    display: inline-block;
    width: 300rpx;
    height: 330rpx;
    margin-right: 23rpx;
}
.video-other .other-content .other-list{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 300rpx;
    height: 230rpx;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    overflow: hidden;
}
.video-other .other-content .other-list .other-btn {
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    margin-top: 90rpx;
    background-size:45rpx;
    background-image:url(http://i.gtimg.cn/qqlive/images/20150911/i1441959133_1.jpg);
    background-repeat: no-repeat; 
}
.video-other .other-content .other-list .other-title{
    display: -webkit-box;
    display: flex;
    width: 300rpx;
    height: 100rpx;
    padding-top: 230rpx;
    position: absolute;
    font-size: 15px;
    color: #fff;
    text-align: center;
    word-wrap: break-word;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
