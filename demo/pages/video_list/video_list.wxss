/* pages/video/video_list.wxss */
page{
  background-color:  #191E2A;
}
.video{
  padding: 0 20rpx;
}
.video-list{
  display:flex;
  flex-wrap:wrap;
  padding-top: 20rpx;
}
.video-detail{
  width: 345rpx;
  margin-bottom: 20rpx;
}
.video-list .video-detail:nth-child(odd){
  margin-right: 20rpx;
}
.video-box{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 345rpx;
  height: 280rpx;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}
.video-box .video-btn {
  width: 55rpx;
  height: 55rpx;
  background-size:45rpx;
  background-image:url(http://i.gtimg.cn/qqlive/images/20150911/i1441959133_1.jpg);
  background-repeat: no-repeat; 
}
.video-title{
  margin-left: 15rpx;
  font-size: 15px;
  color: #fff;
  text-align: center;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 100rpx;
  width: 300rpx;
} 