/* pages/news/news.wxss */
  page {
    background: #fbfbfb;
    height: 100%;
  }
  .news-scroll{
    height: 100%
  }
  .scroll-main{
    padding:0 20rpx 96rpx 20rpx;
  }
  .news-title {
    margin: 40rpx 0;
    line-height: 60rpx;
    font-size: 44rpx;
    font-weight: 500;
    color: #333
  }
  .news-from {
    line-height: 30rpx;
    font-size: 28rpx;
    color: #c1c1c1;
  }
  .news-from text{
    max-width: 65%;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden
  }
  .news-content {
  }
  .news-content .image {
    width: 100%;
    height: 300rpx;
    margin: 30rpx 0;
    display: block;
  }
  .news-content .desc text{
    font-size: 28rpx;
    color: #333
  }
  .news-handle {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 96rpx;
    background: #fff;
    font-size: 28rpx;
    color: #333
  }
  .news-handle .handle-content{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 96rpx;
    padding: 0 20rpx
  }
  .news-handle .handle-content .back{
    width: 40rpx;
    height: 40rpx;
    background: url(https://n1image.hjfile.cn/mh/2017/06/06/1305a8ac4dc9347b59cc8c2c667122e5.png) 0 0 no-repeat;
    background-size: contain
  }
  .news-handle .handle-content .next{
    font-size: 28rpx;
    color: #333;
    text-align: center;
  }
 
  .news-handle .handle-content .share {
    width: 40rpx;
    height: 40rpx;
  }
  .news-handle .handle-content .share button{
    width: 40rpx;
    height: 40rpx;
    margin: 0;
    padding: 0;
    border: none;
    border-radius:0;
    background: url(https://n1image.hjfile.cn/mh/2017/06/09/ebc3852fb865bd19182c09ca599d8ac1.png) 0 0 no-repeat;
    background-size: contain;
  }
  .news-handle .handle-content .share button:after {
    content: '';
    border: none;
    border-radius: 0;
    width: 0;
    height: 0
  }
